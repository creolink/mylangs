{% extends "JakubMylangsBundle::base.html.twig" %}

{% block stylesheets %}
	<link href="{{ asset('/bundles/jakubmylangs/css/register.css') }}" type="text/css" rel="stylesheet" />
	{{ parent() }}
{% endblock %}

{% block content %}
	<div class="ctn ce">
		<h1>Welcome into MyLangs application by Jakub Luczynski</h1>
	</div>
	<div class="ctn ce">
		<p>Please register</p>
		{% if error %}
			<p>{{ error.message }}</p>
		{% endif %}
		{{ form(form, {'attr': {'novalidate': 'novalidate'}}) }}
	</div>
	<div class="ctn ce">
		<a href="{{ path('homepage') }}">I have account - login</a>
	</div>
{% endblock %}